generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model UserData {
  id       Int         @id @default(autoincrement())
  username String      @unique
  password String
  resume   ResumeData?
}

model ResumeData {
  id       Int             @id @default(autoincrement())
  name     String
  phone    String
  email    String
  github   String
  linkedin String
  userId   Int             @unique
  user     UserData        @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections ResumeSection[]
}

model ResumeSection {
  id           Int                @id @default(autoincrement())
  name         String
  visible      Boolean            @default(true)
  resumeDataId Int
  experiences  ResumeExperience[]
  resumeData   ResumeData         @relation(fields: [resumeDataId], references: [id], onDelete: Cascade)
}

model ResumeExperience {
  id           Int           @id @default(autoincrement())
  title        String
  subTitle     String
  timePeriod   String
  location     String
  bulletPoints String[]
  visible      Boolean       @default(true)
  sectionId    Int
  skillsUsed   String
  section      ResumeSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}
